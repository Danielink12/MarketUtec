<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginbg"
    tools:context=".Fragments.Login">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MarketUtec"
                android:textColor="@color/md_white_1000"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="___________________________________________________"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Una nueva forma de cumplir"
                android:textColor="@color/md_white_1000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="tus metas"
                android:textColor="@color/md_white_1000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="41dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="52dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="12"
                app:hintAnimationEnabled="true"
                android:textColorHint="@color/md_white_1000"
                app:placeholderTextColor="@color/md_white_1000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:ems="10"
                    android:hint="@string/login_carnet_hint"
                    android:inputType="number"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"
                    app:backgroundTint="@color/md_white_1000" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/md_white_1000"
                app:hintTextColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"
                app:placeholderTextColor="@color/md_white_1000">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:ems="10"
                    android:hint="@string/login_password"
                    android:inputType="textPassword"
                    app:backgroundTint="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"
                    android:textColor="@color/md_white_1000" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="58dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="Ingresar"
                android:textColor="@drawable/btn_login_color" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olvide mi contraseña"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textColor="@drawable/btn_login_color" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="¿Eres nuevo? Registrate!"
                    android:textColor="@drawable/btn_login_color" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="243dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>