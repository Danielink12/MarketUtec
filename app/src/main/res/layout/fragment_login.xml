<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginbg"
    tools:context=".Fragments.Login">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MarketUtec"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"
            android:text="___________________________________________________" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/md_white_1000"
            android:textSize="20dp"
            android:text="Una nueva forma de cumplir" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/md_white_1000"
            android:textSize="20dp"
            android:text="tus metas" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <EditText
            android:id="@+id/txtMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:hint="Carnet"
            android:inputType="textPersonName"
            android:text="25-2857-2018"
            tools:text="25-2857-2018"
            android:textColor="@color/md_white_1000"
            app:backgroundTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="1234"
            tools:text="1234"
            android:textColor="@color/md_white_1000"
            app:backgroundTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="145dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@drawable/btn_login_color"
            android:text="Ingresar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="168dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/btn_login_color"
                android:text="Olvide mi contraseña" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="¿Eres nuevo? Registrate!"
                android:textColor="@drawable/btn_login_color" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>